{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "allowJs": true,
        "charset": "utf8",
        "importHelpers": true,
        "locale": "zh-CN",
        "module": "es6",
        "moduleResolution": "node",
        "newLine": "LF",
        "noEmitOnError": false,
        "noFallthroughCasesInSwitch": true,
        "outDir": "build",
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es2018",
        "typeRoots": ["typings"]
    },
    "include": [
        "src"
    ]
}
